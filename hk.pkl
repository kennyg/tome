amends "package://github.com/jdx/hk/releases/download/v1.28.0/hk@1.28.0#/Config.pkl"
import "package://github.com/jdx/hk/releases/download/v1.28.0/hk@1.28.0#/Builtins.pkl"

local linters = new Mapping<String, Step> {
    // Go formatting
    ["gofmt"] {
        glob = "*.go"
        check = "gofmt -l {{files}}"
        fix = "gofmt -w {{files}}"
    }
    
    // Go vet
    ["govet"] {
        glob = "*.go"
        check = "go vet ./..."
        exclusive = true
    }
}

hooks {
    ["pre-commit"] {
        fix = true    // automatically modify files with available linter fixes
        stash = "git" // stashes unstaged changes while running fix steps
        steps = linters // add all linters defined above
    }
    // pre-push runs tests and security checks
    ["pre-push"] {
        steps {
            ["test"] {
                check = "go test ./..."
                exclusive = true
            }
            ["build"] {
                check = "go build ."
                exclusive = true
            }
            ["govulncheck"] {
                check = "command -v govulncheck >/dev/null 2>&1 && govulncheck ./... || go run golang.org/x/vuln/cmd/govulncheck@latest ./..."
                exclusive = true
            }
            ["staticcheck"] {
                check = "command -v staticcheck >/dev/null 2>&1 && staticcheck ./... || go run honnef.co/go/tools/cmd/staticcheck@latest ./..."
                exclusive = true
            }
        }
    }
    // "fix" and "check" are special steps for `hk fix` and `hk check` commands
    ["fix"] {
        fix = true
        steps = linters
    }
    ["check"] {
        steps = linters
    }
}
